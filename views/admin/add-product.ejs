<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="layout">

        <h1 class="title">Add new course</h1>

        <form class="form" action="/admin/add-product" method="POST">
            <div class="form__group">
                <div class="form__control">
                    <label for="title">Title</label>
                    <input id="title" name="title" type="text" class="input">
                </div>

                <div class="form__control">
                    <label for="price">Price</label>
                    <input id="price" name="price" type="number" step="0.01" class="input">
                </div>

                <div class="form__control">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="textarea"></textarea>
                </div>

                <div class="form__control">
                    <label for="img">Image URL</label>
                    <input id="img" name="img" type="text" class="input">
                </div>

            </div>

            <button class="btn" type="submit">Add</button>
        </form>
    </main>
</body>

<%- include('../includes/end.ejs') %>
